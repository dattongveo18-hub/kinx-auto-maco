{
  "name": "kinx-auto",
  "version": "3.7.7",
  "description": "Kinx Auto",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --mac"
  },
  "build": {
    "appId": "com.kinx.auto",
    "productName": "Kinx Auto",
    "files": [
      "**/*",
      "!node_modules/.cache",
      "!**/*.map",
      "!dist/**"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "build/icon.icns",
      "target": [
        "dmg",
        "zip"
      ],
      "artifactName": "Kinx-Auto-macOS-${version}.${ext}",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "sign": false
    },
    "dmg": {
      "background": "build/dmg-background.png",
      "window": {
        "width": 540,
        "height": 380
      },
      "iconSize": 128
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        "nsis",
        "portable"
      ],
      "artifactName": "Kinx-Auto-Windows-${version}.${ext}"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "build/icons",
      "category": "Utility",
      "artifactName": "Kinx-Auto-Linux-${version}.${ext}"
    }
  },
  "dependencies": {
    "@electron/remote": "^2.1.3",
    "@google/genai": "^1.13.0",
    "dotenv": "^16.4.5",
    "electron-updater": "^6.1.1",
    "fluent-ffmpeg": "^2.1.3",
    "i18next": "^25.6.0",
    "lucide-react": "^0.546.0",
    "puppeteer": "^24.22.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-i18next": "^16.1.0",
    "react-resizable-panels": "^3.0.6"
  },
  "devDependencies": {
    "electron": "^31.7.7",
    "electron-builder": "^24.13.3"
  }
}
